<!DOCTYPE html>
<html lang="hu">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="style.css">
    <script src="script.js"></script>
    
    <title>Portaszolgálat</title>
</head>
<body>
    <header>
        <h1>Portaszolgálat</h1>
        <nav>

            <div>
                <menu>
                    <a href="/" class="button-link">Főoldal</a>
                    <% if (user) { %>
                        <% switch (statusz) {
                         case 'Tanár': %>
                        <a href="/szemelyek" class="button-link">Személyek adatai</a>
                        <a href="/logout" class="button-link">Kijelentkezés</a>
                       <% break; 
                       case 'Igazgató': %>
                       <a href="/szemelyek" class="button-link">Személyek adatai</a>
                        <a href="/kapu" class="button-link">Kapuk adatai</a>
                        <a href="/athalado" class="button-link">Áthaladás adatai</a>
                        <a href="/logout" class="button-link">Kijelentkezés</a>
                        
                       <% break; 
                       case 'Osztályfőnök': %>
                       <a href="/szemelyek" class="button-link">Személyek adatai</a>
                       <a href="/logout" class="button-link">Kijelentkezés</a>
                       <% break; 
                       case 'Portás': %>
                       <a href="/szemelyek" class="button-link">Személyek adatai</a>
                       <a href="/athalado" class="button-link">Áthaladás adatai</a>
                       <a href="/logout" class="button-link">Kijelentkezés</a>
                       <% break; 
                       default: %> 
                       <a href="/logout" class="button-link">Kijelentkezés</a>
                        <% } %>
                    <% } else { %>
                        <a href="/login" class="button-link">Bejelentkezés</a>
                    <% } %>
                   
                 
                </menu>   
            </div>

        </nav>
    </header>

   
    <main>
        <%- body %>
    </main>
</body>
</html>